<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MotionLink.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MotionLink"
    xmlns:views="clr-namespace:MotionLink.Views"
    Title="MotionLink">

    <TabBar>
        <Tab Title="Connect">
            <ShellContent
                ContentTemplate="{DataTemplate views:PeripheralConnectView}" />
        </Tab>
        <Tab Title="Analysis" >
            <ShellContent
                ContentTemplate="{DataTemplate views:SensorDisplayView}" />
        </Tab>
    </TabBar>


        

</Shell>
